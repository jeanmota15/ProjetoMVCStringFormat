@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/bootstrap")
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 370px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>
</head>
<body>
    <div align="center">
        <form class="form-signin" method="POST">      

                <img src="~/img/logoMotaIntra.jpg" alt="Empresa Mota" />

            <h2 class="form-signin-heading">Tela de Login</h2>

            @if (@ViewBag.Mensagem != null)
            {
                <div class="alert-error ">
                    <span style="color: #CC0000;">@ViewBag.Mensagem </span>
                </div>
            }

            <input type="text" class="input-block-level" placeholder="Usuário" name="usuario" id="usuario"><br />
            <input type="password" class="input-block-level" placeholder="Senha" name="senha" id="senha"><br />

            <button class="btn btn-large btn-primary" type="submit">Acessar</button>

        </form>
    </div>
</body>
</html>

